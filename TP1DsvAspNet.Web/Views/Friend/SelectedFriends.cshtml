@model IEnumerable<TP1DsvAspNet.Domain.Friend>;

@{
    ViewData["Title"] = "Selected Friends";
}

<h1>Index</h1>
<h4 class="text-muted">Name - Surname - Birthday</h4>

<body>
    <div>
        <h4>Friend</h4>
        <hr />
        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <p>
            <a href="/Friend/Index" id="linkNav">INDEX</a>
        </p>
        <table class="table table-hover" style="text-align: center;">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Surname)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Birthday)
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <span>@Html.DisplayFor(modelItem => item.Name)</span>
                        </td>
                        <td>
                            <span>@Html.DisplayFor(modelItem => item.Surname)</span>
                        </td>
                        <td>
                            <span>@Html.DisplayFor(modelItem => item.Birthday)</span>
                        </td>
                        <td>
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
